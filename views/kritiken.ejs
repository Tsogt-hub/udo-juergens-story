<%- include('partials/header', { pageTitle: 'Kritiken' }) %>

  <!-- Page Header -->
  <section class="page-header">
    <h1>Kritiken</h1>
    <p class="page-header-sub">Was die Presse und das Publikum sagen</p>
  </section>

  <!-- Kritiken -->
  <section class="section">
    <div class="container">
      <% if (kritiken.length > 0) { %>
        <div class="kritiken-grid">
          <% kritiken.forEach(function(kritik) { %>
            <div class="kritik-card">
              <div class="kritik-quote">"</div>
              <p class="kritik-text"><%= kritik.text %></p>
              <div class="kritik-footer">
                <strong><%= kritik.stadt %></strong>
                <% if (kritik.quelle) { %><span class="kritik-quelle">â€“ <%= kritik.quelle %></span><% } %>
                <% if (kritik.datum) { %><span class="kritik-datum"><%= kritik.datum %></span><% } %>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <p>Noch keine Kritiken vorhanden.</p>
        </div>
      <% } %>
    </div>
  </section>

<%- include('partials/footer') %>
